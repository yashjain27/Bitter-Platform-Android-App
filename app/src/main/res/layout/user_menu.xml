<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/button4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onFollow" />

    <Button
        android:text="Unfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/button6"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:onClick="onUnfollow" />

    <Button
        android:text="View Followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/button7"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:onClick="onViewFollowers" />

    <Button
        android:text="Following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/button8"
        android:layout_below="@+id/button7"
        android:layout_alignEnd="@+id/button6"
        android:onClick="onFollowing" />

    <Button
        android:text="List All Users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/button9"
        android:layout_below="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:onClick="onListAllUsers" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:onClick="onLogout" />

    <Button
        android:text="Close Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:layout_marginTop="20dp"
        android:onClick="onCloseAccount" />
</RelativeLayout>
